# ========================
# Aplikasi
# ========================
APP_NAME=Laravel                    # Nama aplikasi
APP_ENV=local                       # Environment: local, production, atau staging
APP_KEY=                             # Key enkripsi aplikasi (harus di-generate)
APP_DEBUG=true                      # Debug mode aktif (true) atau mati (false)
APP_URL=http://localhost            # URL utama aplikasi

APP_LOCALE=en                        # Bahasa default aplikasi
APP_FALLBACK_LOCALE=en               # Bahasa cadangan jika bahasa default tidak tersedia
APP_FAKER_LOCALE=en_US               # Locale untuk data dummy Faker

# ========================
# Maintenance & PHP
# ========================
APP_MAINTENANCE_DRIVER=file          # Driver penyimpanan mode maintenance
# APP_MAINTENANCE_STORE=database     # Bisa menggunakan database sebagai alternatif

PHP_CLI_SERVER_WORKERS=4             # Jumlah worker saat pakai php artisan serve
BCRYPT_ROUNDS=12                     # Jumlah ronde hashing password

# ========================
# Logging
# ========================
LOG_CHANNEL=stack                     # Channel log utama
LOG_STACK=single                      # Jenis channel stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug                       # Level log: debug/info/warning/error

# ========================
# Database
# ========================
DB_CONNECTION=mysql                   # Driver database yang digunakan
DB_HOST=127.0.0.1                     # Host database
DB_PORT=3306                          # Port database
DB_DATABASE=be_findemy                # Nama database
DB_USERNAME=root                      # Username database
DB_PASSWORD=                          # Password database

# ========================
# Session
# ========================
SESSION_DRIVER=database               # Menyimpan session di database
SESSION_LIFETIME=120                  # Lama session aktif dalam menit
SESSION_ENCRYPT=false                 # Encrypt session (true/false)
SESSION_PATH=/                        # Path session
SESSION_DOMAIN=null                   # Domain session

# ========================
# Broadcast, Queue & Cache
# ========================
BROADCAST_CONNECTION=log              # Driver broadcast
FILESYSTEM_DISK=local                 # Storage default
QUEUE_CONNECTION=database             # Driver queue
CACHE_STORE=database                  # Driver cache
# CACHE_PREFIX=                        # Prefix cache opsional
MEMCACHED_HOST=127.0.0.1             # Host memcached

# ========================
# Redis
# ========================
REDIS_CLIENT=phpredis                 # Client Redis
REDIS_HOST=127.0.0.1                  # Host Redis
REDIS_PASSWORD=null                   # Password Redis
REDIS_PORT=6379                        # Port Redis

# ========================
# Mail
# ========================
MAIL_MAILER=log                       # Driver mail (log = tidak mengirim, hanya log)
MAIL_SCHEME=null                       # Skema mail
MAIL_HOST=127.0.0.1                    # Host mail (localhost)
MAIL_PORT=2525                         # Port mail
MAIL_USERNAME=null                     # Username email
MAIL_PASSWORD=null                     # Password email
MAIL_FROM_ADDRESS="hello@example.com"  # Alamat pengirim default
MAIL_FROM_NAME="${APP_NAME}"           # Nama pengirim default

# ========================
# AWS
# ========================
AWS_ACCESS_KEY_ID=                     # AWS Access Key
AWS_SECRET_ACCESS_KEY=                 # AWS Secret Key
AWS_DEFAULT_REGION=us-east-1           # Region default
AWS_BUCKET=                            # Nama bucket S3
AWS_USE_PATH_STYLE_ENDPOINT=false      # Path style endpoint

# ========================
# Frontend (Vite)
# ========================
VITE_APP_NAME="${APP_NAME}"            # Nama aplikasi untuk Vite (frontend)
